{
  "manifest_version": 2,
  "background": {
      "scripts": [ "jquery.min.js", "background.js" ]
  },
  "name": "Youtube Notifications (beta)",
  "description": "Get notifications when selected Youtubers upload a new video.",
  "version": "1.0.9.0",
  "permissions": [ "notifications", "*://*.youtube.com/*"],
  "browser_action": {
    "default_icon": "img/48.png",
    "default_popup": "settings.html"
  },
   "icons": {
      "16": "img/16.png",
      "48": "img/48.png",
      "128": "img/128.png"
   },
   "update_url": "https://dl.dropboxusercontent.com/u/14210090/Youtube%20Notifications/updates.xml"
}